{
  "mcpServers": {
    "openbanking-mcp": {
      "command": "python",
      "args": ["-m", "server"],
      "cwd": "${workspaceFolder}",
      "env": {
        "TRUELAYER_CLIENT_ID": "${env:TRUELAYER_CLIENT_ID}",
        "TRUELAYER_CLIENT_SECRET": "${env:TRUELAYER_CLIENT_SECRET}",
        "REDIRECT_URI": "${env:REDIRECT_URI}",
        "TRUELAYER_DEBUG_PAYLOADS": "${env:TRUELAYER_DEBUG_PAYLOADS}"
      }
    }
  }
}
